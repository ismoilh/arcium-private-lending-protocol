# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_PUBLIC_KEY=11111111111111111111111111111111

# Arcium Configuration (when available)
ARCIUM_API_KEY=your_arcium_api_key_here
ARCIUM_NETWORK_URL=https://api.arcium.com
ARCIUM_ENCRYPTION_KEY=your_encryption_key_here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=arcium_lending
DATABASE_URL=postgresql://postgres:password@localhost:5432/arcium_lending

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30

# Risk Assessment Configuration
RISK_MODEL_VERSION=1.0.0
ENABLE_ML_RISK_ASSESSMENT=true

# Liquidation Configuration
LIQUIDATION_THRESHOLD=1.2
LIQUIDATION_PENALTY=0.05
LIQUIDATION_CHECK_INTERVAL=300000

# Governance Configuration
GOVERNANCE_ENABLED=true
PROPOSAL_THRESHOLD=1000
VOTING_PERIOD_DAYS=7
QUORUM_THRESHOLD=10000
EXECUTION_DELAY_HOURS=24

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# API Configuration
API_PREFIX=api
API_VERSION=v1
SWAGGER_ENABLED=true
